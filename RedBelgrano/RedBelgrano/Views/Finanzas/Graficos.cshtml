@{
    Layout = "~/Views/Shared/_Finanzas.cshtml";
}

<div class="row mt-2">

    <div class="col-12 mb-3">

        <div class="card" >
            <div class="card-header">Grafico 1</div>
            <div class="card-body">
                <canvas id="chartBalancePorMes" style="max-height = 250px" ></canvas>
            </div>
        </div>

    </div>


    <div class="col-12">

        <div class="card mb-3">
            <div class="card-header">Grafico 2</div>
            <div class="card-body">
                <canvas id="chartTransaccionesPorTipos" style="max-height = 250px" ></canvas>
            </div>
        </div>

    </div>


</div>

@section Scripts{

    <script>

        function ObtenerBalanceDeMeses() {

            fetch("ObtenerBalanceDeMeses")
                .then( (response) => {
                    return response.ok? response.json() : Promise.reject(response)
                })
                .then( (dataJson) => 
                {
                    console.log(dataJson)

                    const labels = dataJson.map(item => `${item.año}-${String(item.mes).padStart(2, '0')}`);
                    const valores = dataJson.map(item => item.totalNeto);

                    console.log(labels)
                    console.log(valores)


                    const data = {
                        labels: labels,
                        datasets: [{
                            label: 'Cantidad',
                            data: valores,
                            backgroundColor: 'rgb(0,0,0)',
                            borderWidth: 1
                        }]
                    };

                    const config = {
                        type: 'bar',
                        data: data,
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    }

                    const canvasBalancePorMes = document.getElementById("chartBalancePorMes")
                    const chartBalancePorMes = new Chart(canvasBalancePorMes, config)

                } 
                )
                .catch(error => console.error("Error al cargar datos del gráfico:", error));
        }


        $(document).ready(() => {
            ObtenerBalanceDeMeses()
        })

    </script>

}
