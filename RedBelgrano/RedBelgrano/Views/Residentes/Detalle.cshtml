@model Residente

<head>
    <link rel="stylesheet" href="~/css/Residentes.css" asp-append-version="true" />
</head>

<div class="detalle-container">

    <div class="detalle-header">
        <h2 class="titulo-detalle">Detalle del Residente</h2>
    </div>

    <div class="detalle-body">
        <div class="detalle-linea">
            <span class="detalle-label">Nombre Completo:</span>
            <span class="detalle-dato">@Model.nombre @Model.apellido</span>
        </div>

        <div class="detalle-linea">
            <span class="detalle-label">Documento:</span>
            <span class="detalle-dato">@Model.dni</span>
        </div>

        <div class="detalle-linea">
            <span class="detalle-label">Email:</span>
            <span class="detalle-dato">@Model.email</span>
        </div>

        <div class="detalle-linea">
            <span class="detalle-label">Tipo:</span>
            <span class="detalle-dato">@Model.tipoResidente.tipo</span>
        </div>

        <div class="detalle-linea">
            <span class="detalle-label">Departamento:</span>
            <span class="detalle-dato">@Model.piso @Model.departamento</span>
        </div>

        <div class="detalle-linea">
            <span class="detalle-label">Estado:</span>
            <span class="detalle-dato">@Model.estadoResidente.estado</span>
        </div>

        <div class="detalle-botones">
            <form asp-controller="Residentes" asp-action="DarDeBaja" method="post">
                <input type="hidden" name="id" value="@Model.residenteId" />

                <button type="submit" class="detalle-boton detalle-boton-rojo"
                        onclick="return confirm('Seguro que quiere eliminar a @Model.nombre @Model.apellido?')">
                    Eliminar
                </button>

                <a href="@Url.Action("Modificar", "Residentes", new { id = Model.residenteId })" class="detalle-boton detalle-boton-gris">
                    Modificar
                </a>
            </form>
        </div>
    </div>

</div>
<!--AGREGAR CONFIRMACION PARA DAR DE BAJA-->

<form asp-controller="Residentes" asp-action="DarDeBaja" method="post">
    <input type="hidden" name="id" value="@Model.residenteId" />
    <button onclick="return confirm('Seguro que quiere eliminar a @Model.nombre @Model.apellido?')" type="submit" class="btn btn-danger">Eliminar</button>

    <a href="@Url.Action("Modificar", "Residentes", new { id = Model.residenteId })" class="btn btn-secondary">Modificar</a>
</form>
