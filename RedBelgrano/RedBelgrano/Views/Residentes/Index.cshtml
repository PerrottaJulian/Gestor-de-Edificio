@model List<Residente>
<!--RESIDENTEEEESSSSSS-->

<style>
    caption {
        caption-side: top;
        text-align: center;
        font-weight: bold;
        font-size: 1.2em;
        padding: 0.5em;
        color: white;
        border-right: solid #dee2e6 1px;
        border-left: solid #dee2e6 1px;
        border-top: solid #dee2e6 1px;

        background-color: black
    }
</style>

<a class="btn btn-primary" asp-controller="Residentes" asp-action="Nuevo">Añadir Residente</a>

<div class="table-responsive">
    <table class="table table-bordered table-light"> 

        <caption> RESIDENTES </caption>
        <thead>

            <tr>
                <th>Nombre</th>
                <th>DNI</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Piso</th>
                <th>Departamento</th>
                <th>FechaIngreso</th>
            
            </tr>
        </thead>

        <tbody>

            @foreach(Residente residente in Model)
            {
                @if(residente.fechaBaja == null)
                {

                    <tr onclick="location.href='@Url.Action("Detalle", "Residentes", new { id = residente.residenteId })'" style="cursor:pointer;" >
                        <td>@residente.nombre</td>
                        <td>@residente.dni</td>
                        <td>@residente.email</td>
                        <td>@residente.telefono</td>
                        <td>@residente.tipoResidente?.tipo</td>
                        <td>@residente.estadoResidente?.estado</td>
                        <td>@residente.piso</td>
                        <td>@residente.departamento</td>
                        <td>@residente.fechaIngreso</td>

                        @if(residente.fechaBaja != null)
                        {
                            <td>@residente.fechaBaja</td>
                        }
                        <!--Poner boton de Eliminar en la vista Detalle-->
                    </tr>
                }

            }
        
        </tbody>
    
    </table>
</div>