<body>

    <!-- Sección Superior -->
    <section class="seccion-superior">
        <div class="contenido-superior">

            <!-- Columna de texto -->
            <div class="columna-texto">
                <h1 class="titulo-principal">Red Belgrano</h1>
                <h4 class="subtitulo-principal">Tu nuevo gestor y plataforma comunitaria de edificio</h4>
                <p>Ingresa para publicar tus novedades, comunicarte con los superiores, o visualizar la información que necesites</p>
                <div class="text-center">
                    <a asp-action="IniciarSesion" asp-controller="Login" class="btn btn-primary botoncito">Iniciar Sesión</a>
                </div>
            </div>

            <!-- Columna de imagen -->
            <div class="columna-imagen">
                <img src="@Url.Content("~/images/logo2.png")" alt="Logo" class="" >
            </div>

        </div>
    </section>

    <!-- Sección Inferior -->
    <section class="seccion-inferior">
        <h2 class="titulo-inferior">Todo en un mismo lugar</h2>
    </section>


